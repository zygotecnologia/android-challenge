<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_season_details"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_title_season_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Temporada 1"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        app:layout_constraintStart_toEndOf="@id/iv_season_details"
        android:layout_marginStart="17dp"
        app:layout_constraintTop_toTopOf="@id/iv_season_details"/>

    <TextView
        android:id="@+id/tv_overview_season_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/text_overview"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cb_collapse_episodes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tv_title_season_details"
        app:layout_constraintTop_toBottomOf="@id/tv_title_season_details"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Pequena sinÃ³pse da temporada aqui" />

    <CheckBox
        android:id="@+id/cb_collapse_episodes"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/collapse_episode_icon"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_season_details"
        android:button="@null"
        android:checked="true"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_episodes"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_season_details"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/episode_item"/>



</androidx.constraintlayout.widget.ConstraintLayout>