<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="showName"
            type="String" />
        <variable
            name="showBackdropPath"
            type="String" />
        <variable
            name="onClickAction"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvMostPopularName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{showName}"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nome da sÃ©rie"/>

        <ImageView
            android:id="@+id/ivMostPopularPoster"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:onClick="@{onClickAction}"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:backdropPath="@{showBackdropPath}"
            app:layout_constraintTop_toBottomOf="@+id/tvMostPopularName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/image_placeholder"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>