<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginHorizontal="4dp">

    <ImageView
        android:id="@+id/ivShowPoster"
        android:layout_width="@dimen/show_poster_width"
        android:layout_height="@dimen/show_poster_height"
        android:layout_marginVertical="8dp"
        android:scaleType="fitStart"
        android:src="@drawable/image_placeholder"
        android:contentDescription="@string/poster_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShowTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/show_item_label_size"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivShowPoster"
        app:layout_constraintTop_toBottomOf="@+id/ivShowPoster"
        tools:text="Title" />

</androidx.constraintlayout.widget.ConstraintLayout>