<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cv_child_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/img_child_item"
                android:scaleType="centerCrop"
                android:layout_width="140dp"
                android:layout_height="200dp"
                tools:src="@drawable/ic_launcher_background" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/cv_child_item"
        app:layout_constraintTop_toBottomOf="@+id/cv_child_item"
        app:layout_constraintEnd_toEndOf="@+id/cv_child_item"
        android:id="@+id/child_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="gseg"
        tools:textColor="@color/black"
        android:textColor="@color/gray"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
