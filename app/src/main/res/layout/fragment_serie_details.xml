<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fragfrag"
    tools:context=".series.fragments.SerieFragment">

    <TextView
        android:id="@+id/tv_title_serie_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome da SÃ©rie"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="@dimen/dimen_24dp"/>
    
    <ImageView
        android:id="@+id/iv_serie_details"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:scaleType="fitXY"
        android:layout_marginTop="6px"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:background="@color/white"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_24dp"/>

    <ProgressBar
        android:id="@+id/pb_details"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="100dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>