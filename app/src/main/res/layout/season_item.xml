<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/season_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="6dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/season_show_poster"
            android:layout_width="100dp"
            android:layout_height="69dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/season_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Temporada 1"
        android:padding="6dp"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/season_cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/season_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:hint="@string/long_text_example"
        android:maxLines="2"
        android:padding="6dp"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/season_show_more_arrow"
        app:layout_constraintStart_toEndOf="@+id/season_cardView"
        app:layout_constraintTop_toBottomOf="@id/season_title" />

    <ImageView
        android:id="@+id/season_show_more_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/arrow_down_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>