<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/background"

    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/list_details_episode_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textColor="@color/font_text"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/list_details_episode_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:textColor="@color/font_text"
        android:textSize="12sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_details_episode_title"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"

        android:background="@color/font_text"

        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/list_details_episode_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>