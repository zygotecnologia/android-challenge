<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingVertical="8dp"
    android:paddingHorizontal="24dp">

    <ImageView
        android:id="@+id/ivSeasonPoster"
        android:layout_width="@dimen/season_poster_width"
        android:layout_height="@dimen/season_poster_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/image_placeholder"/>

    <TextView
        android:id="@+id/tvSeasonNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_default"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/ivSeasonPoster"
        app:layout_constraintStart_toEndOf="@+id/ivSeasonPoster"
        app:layout_constraintEnd_toStartOf="@+id/ivArrow"
        tools:text="Temporada 1"/>

    <TextView
        android:id="@+id/tvSeasonSynopsis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/season_description_text_color"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="@dimen/season_description_text_size"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSeasonNumber"
        app:layout_constraintStart_toEndOf="@+id/ivSeasonPoster"
        app:layout_constraintEnd_toStartOf="@+id/ivArrow"
        tools:text="Temporada 1"/>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>