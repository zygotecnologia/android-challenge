<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isSearchButtonEnabled"
            type="boolean" />

        <variable
            name="isSearchEnabled"
            type="boolean" />

        <variable
            name="isBackEnabled"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginStart="10dp"
            app:show="@{isBackEnabled}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            app:formatLogo="@{true}"
            app:show="@{!isSearchEnabled}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="10dp"
            app:show="@{!isSearchEnabled &amp;&amp; isSearchButtonEnabled}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchSV"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/editbox_background"
            android:imeOptions="actionSearch"
            android:textColor="#FA615E5E"
            android:textColorHint="#FAA59D9D"
            android:textStyle="bold"
            android:focusable="false"
            app:show="@{isSearchEnabled}"
            app:iconifiedByDefault="false"
            app:searchIcon="@drawable/ic_search_black"
            app:closeIcon="@drawable/ic_close"
            app:queryHint="Pesquisar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>