<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZygoTV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/highlight_red</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highlight_red</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ZygoTV.Toolbar.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textSize">16sp</item>
        <item name="commitIcon">@drawable/ic_arrow_back</item>
        <item name="colorControlNormal">@color/font_text</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:background">@drawable/background_round_search_view</item>
    </style>

</resources>