<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.zygotecnologia.zygotv.home.presentation.HomeFragment"
        android:label="Home"
        tools:layout="@layout/home_fragment" >

        <action
            android:id="@+id/open_details"
            app:destination="@id/details_fragment" />
    </fragment>

    <action
        android:id="@+id/pop_to_home"
        app:destination="@id/home_fragment"
        app:popUpTo="@id/home_fragment"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/details_fragment"
        android:name="com.zygotecnologia.zygotv.details.presentation.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/details_fragment">

        <argument
            android:name="show_id"
            app:argType="integer" />
    </fragment>
</navigation>