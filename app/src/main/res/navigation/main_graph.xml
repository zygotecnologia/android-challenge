<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.zygotecnologia.zygotv.ui.home.fragment.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_seriesDetailsFragment"
            app:destination="@id/seriesDetailsFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_searchFragment2"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/seriesDetailsFragment"
        android:name="com.zygotecnologia.zygotv.ui.details.fragment.SeriesDetailsFragment"
        android:label="series_details_fragment"
        tools:layout="@layout/series_details_fragment" >
        <argument
            android:name="show"
            app:argType="com.zygotecnologia.zygotv.model.Show" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.zygotecnologia.zygotv.ui.search.fragment.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />
</navigation>